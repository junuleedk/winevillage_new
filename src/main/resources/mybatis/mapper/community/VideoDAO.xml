<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winevillage.community.IVideoService">
	<!-- (USER측)매거진 리스트 출력 -->
	<select id="listVideo" resultType="com.winevillage.community.VideoDTO"
			parameterType="com.winevillage.parameter.ParameterDTO">
		SELECT * FROM (
			SELECT Tb.*, rownum rNum FROM (
				SELECT seq, brand, title, thumbnail
				FROM video
				WHERE 1=1
					AND thumbnail IS NOT NULL
			) Tb
		)
		WHERE rNum <![CDATA[>=]]> #{start}
		AND rNum <![CDATA[<=]]> #{end}
	</select>
	
	<!-- (USER측)매거진 상세페이지 -->
	<select id="viewVideo" resultType="com.winevillage.community.VideoDTO"
			parameterType="com.winevillage.parameter.ParameterDTO">
	SELECT * FROM video WHERE seq=#{seq}
	</select>
</mapper>