<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winevillage.community.IBrandStoryService">
	<!-- (USER측)브랜드 리스트 출력 -->
	<select id="listBrandStory" resultType="com.winevillage.community.BrandStoryDTO"
			parameterType="com.winevillage.parameter.ParameterDTO">
		SELECT * FROM (
			SELECT Tb.*, rownum rNum FROM (
				SELECT story_seq, thumbnail, title
				FROM brandstory
				WHERE 1=1
			) Tb
		)
		WHERE rNum <![CDATA[>=]]> #{start}
		AND rNum <![CDATA[<=]]> #{end}
	</select>
	
	<!-- (USER측)상품 상세페이지 -->
	<select id="viewBrandStory" resultType="com.winevillage.community.BrandStoryDTO"
			parameterType="com.winevillage.parameter.ParameterDTO">
	SELECT * FROM brandstory WHERE story_seq=#{story_seq}
	</select>
</mapper>